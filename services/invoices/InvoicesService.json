{
    "name": "Zoho invoice invoices api",
    "apiVersion": "v3",
    "basePath": "https://invoice.zoho.com",
    "description": "Foo is an API that allows you to Baz Bar",
    "includes": ["../BaseService.json"],
    "operations": {
        "getInvoices": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "GET",
            "uri": "/api/v3/invoices",
            "summary": "List all invoices with pagination",
            "additionalParameters": {
                "location": "query"
            }
        },
        "getInvoice": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "GET",
            "uri": "/api/v3/invoices/{invoice_id}",
            "summary": "Get the details of an invoice",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                },
                "print": {
                    "location": "query",
                    "type": "boolean"
                },
                "accept": {
                    "location": "query",
                    "type": "string",
                    "description": "Get the details of a particular invoice in formats such as json/ pdf/ html. Default format is json. Allowed Values: json, pdf and html"
                }
            }
        },
        "createInvoice": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "POST",
            "uri": "/api/v3/invoices",
            "summary": "Creates a new invoice",
            "parameters": {
                "send": {
                    "location": "query",
                    "type": "boolean"
                },
                "ignore_auto_number_generation": {
                    "location": "query",
                    "type": "boolean",
                    "description": "Ignore auto invoice number generation for this invoice. This mandates the invoice number."
                },
                "customer_id": {
                    "location": "json",
                    "description": "ID of the customer the invoice has to be created.",
                    "type": "string",
                    "required": true
                },
                "contact_persons": {
                    "location": "json",
                    "description": "Array of contact person(s) for whom invoice has to be sent.",
                    "type": "array"
                },
                "template_id": {
                    "location": "json",
                    "type": "string"
                },
                "invoice_number": {
                    "location": "json",
                    "type": "string",
                    "description": "Mandatory if auto number generation is disabled."
                },
                "date": {
                    "location": "json",
                    "type": "string",
                    "description": "The date the estimate is created. format [yyyy-mm-dd]"
                },
                "payment_terms": {
                    "location": "json",
                    "type": "string",
                    "description": "Payment terms in days e.g. 15, 30, 60. Invoice due date will be calculated based on this."
                },
                "payment_terms_label": {
                    "location": "json",
                    "type": "string",
                    "description": "Used to override the default payment terms label. Default value for 15 days is \"Net 15 Days\"."
                },
                "due_date": {
                    "location": "json",
                    "type": "string",
                    "description": "Date invoice is due. format [yyyy-mm-dd]"
                },
                "exchange_rate": {
                    "location": "json",
                    "type": "number"
                },
                "discount": {
                    "location": "json",
                    "type": "string",
                    "description": "Discount applied to the invoice. It can be either in % or in amount. e.g. 12.5% or 190."
                },
                "is_discount_before_tax": {
                    "location": "json",
                    "type": "boolean",
                    "description": "Used to specify how the discount has to applied. Either before or after the calculation of tax."
                },
                "discount_type": {
                    "location": "json",
                    "type": "string",
                    "description": "How the discount is specified. Allowed values are entity_level or item_level."
                },
                "salesperson_name": {
                    "location": "json",
                    "type": "string",
                    "description": "Name of the sales person."
                },
                "custom_fields": {
                    "location": "json",
                    "type": "array"
                },
                "line_items": {
                    "location": "json",
                    "type": "array",
                    "parameters": {
                        "item_id": {
                            "location": "json",
                            "type": "string"
                        },
                        "name": {
                            "location": "json",
                            "type": "string"
                        },
                        "description": {
                            "location": "json",
                            "type": "string"
                        },
                        "rate": {
                            "location": "json",
                            "type": "number"
                        },
                        "unit": {
                            "location": "json",
                            "type": "string"
                        },
                        "quantity": {
                            "location": "json",
                            "type": "number"
                        },
                        "discount": {
                            "location": "json",
                            "type": "string"
                        },
                        "tax_id": {
                            "location": "json",
                            "type": "string"
                        }
                    }
                },
                "time_entry_ids": {
                    "location": "json",
                    "type": "array",
                    "description": "IDs of the time entries associated with the project."
                },
                "payment_options": {
                    "location": "json",
                    "type": "object",
                    "description": "Payment options for the invoice, online payment gateways and bank accounts. Will be displayed in the pdf.",
                    "parameters": {
                        "payment_gateways": {
                            "location": "json",
                            "type": "array",
                            "description": "Name of the payment gateway associated with the invoice. Allowed Values: paypal, authorize_net, payflow_pro, stripe, 2checkout and braintree"
                        },
                        "additional_field1": {
                            "location": "json",
                            "type": "string",
                            "description": "Paypal payment method. Allowed Values: standard and adaptive"
                        }
                    }
                },
                "allow_partial_payments": {
                    "location": "json",
                    "type": "bool",
                    "description": "Can the payment be made partially for this invoice."
                },
                "shipping_charge": {
                    "location": "json",
                    "type": "string",
                    "description": "Shipping charges applied to the invoice."
                },
                "adjustment": {
                    "location": "json",
                    "type": "number",
                    "description": "Adjustments made to the invoice."
                },
                "adjustment_description": {
                    "location": "json",
                    "type": "string",
                    "description": "Customize the adjustment description. E.g. Rounding off."
                }
            }
        },
        "updateInvoice": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}",
            "summary": "Update a single contact",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "User to update by ID",
                    "required": true
                },
                "ignore_auto_number_generation": {
                    "location": "query",
                    "type": "boolean",
                    "description": "Ignore auto invoice number generation for this invoice. This mandates the invoice number."
                },
                "customer_id": {
                    "location": "json",
                    "description": "ID of the customer the invoice has to be created.",
                    "type": "string",
                    "required": true
                },
                "contact_persons": {
                    "location": "json",
                    "description": "Array of contact person(s) for whom invoice has to be sent.",
                    "type": "array"
                },
                "template_id": {
                    "location": "json",
                    "type": "string"
                },
                "invoice_number": {
                    "location": "json",
                    "type": "string",
                    "description": "Mandatory if auto number generation is disabled."
                },
                "date": {
                    "location": "json",
                    "type": "string",
                    "description": "The date the estimate is created. format [yyyy-mm-dd]"
                },
                "payment_terms": {
                    "location": "json",
                    "type": "string",
                    "description": "Payment terms in days e.g. 15, 30, 60. Invoice due date will be calculated based on this."
                },
                "payment_terms_label": {
                    "location": "json",
                    "type": "string",
                    "description": "Used to override the default payment terms label. Default value for 15 days is \"Net 15 Days\"."
                },
                "due_date": {
                    "location": "json",
                    "type": "string",
                    "description": "Date invoice is due. format [yyyy-mm-dd]"
                },
                "exchange_rate": {
                    "location": "json",
                    "type": "number"
                },
                "discount": {
                    "location": "json",
                    "type": "string",
                    "description": "Discount applied to the invoice. It can be either in % or in amount. e.g. 12.5% or 190."
                },
                "is_discount_before_tax": {
                    "location": "json",
                    "type": "boolean",
                    "description": "Used to specify how the discount has to applied. Either before or after the calculation of tax."
                },
                "discount_type": {
                    "location": "json",
                    "type": "string",
                    "description": "How the discount is specified. Allowed values are entity_level or item_level."
                },
                "salesperson_name": {
                    "location": "json",
                    "type": "string",
                    "description": "Name of the sales person."
                },
                "custom_fields": {
                    "location": "json",
                    "type": "array"
                },
                "line_items": {
                    "location": "json",
                    "type": "array",
                    "parameters": {
                        "item_id": {
                            "location": "json",
                            "type": "string"
                        },
                        "name": {
                            "location": "json",
                            "type": "string"
                        },
                        "description": {
                            "location": "json",
                            "type": "string"
                        },
                        "rate": {
                            "location": "json",
                            "type": "number"
                        },
                        "unit": {
                            "location": "json",
                            "type": "string"
                        },
                        "quantity": {
                            "location": "json",
                            "type": "number"
                        },
                        "discount": {
                            "location": "json",
                            "type": "string"
                        },
                        "tax_id": {
                            "location": "json",
                            "type": "string"
                        }
                    }
                },
                "time_entry_ids": {
                    "location": "json",
                    "type": "array",
                    "description": "IDs of the time entries associated with the project."
                },
                "payment_options": {
                    "location": "json",
                    "type": "object",
                    "description": "Payment options for the invoice, online payment gateways and bank accounts. Will be displayed in the pdf.",
                    "parameters": {
                        "payment_gateways": {
                            "location": "json",
                            "type": "array",
                            "description": "Name of the payment gateway associated with the invoice. Allowed Values: paypal, authorize_net, payflow_pro, stripe, 2checkout and braintree"
                        },
                        "additional_field1": {
                            "location": "json",
                            "type": "string",
                            "description": "Paypal payment method. Allowed Values: standard and adaptive"
                        }
                    }
                },
                "allow_partial_payments": {
                    "location": "json",
                    "type": "bool",
                    "description": "Can the payment be made partially for this invoice."
                },
                "shipping_charge": {
                    "location": "json",
                    "type": "string",
                    "description": "Shipping charges applied to the invoice."
                },
                "adjustment": {
                    "location": "json",
                    "type": "number",
                    "description": "Adjustments made to the invoice."
                },
                "adjustment_description": {
                    "location": "json",
                    "type": "string",
                    "description": "Customize the adjustment description. E.g. Rounding off."
                }
            }
        },
        "deleteInvoice": {
            "httpMethod": "DELETE",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}",
            "summary": "Delete an existing invoice. Invoices which have payment or credits note applied cannot be deleted",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice id",
                    "required": true
                }
            }
        },
        "markSentInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/status/sent",
            "summary": "Mark a draft invoice as sent",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "markVoidInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/status/void",
            "summary": "Mark an invoice status as void. Upon voiding, the payments and credits associated with the invoices will be unassociated and will be under customer credits",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "markDraftInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/status/draft",
            "summary": "Mark a voided invoice as draft",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "emailInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/email",
            "summary": "Email an invoice to the customer. Input json string is not mandatory. If input json string is empty, mail will be send with default mail content",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "send_customer_statement": {
                    "location": "query",
                    "description": "Send customer statement pdf a with email.",
                    "type": "boolean"
                },
                "send_attachment": {
                    "location": "query",
                    "description": "Send the invoice attachment a with the email.",
                    "type": "boolean"
                },
                "send_from_org_email_id": {
                    "location": "json",
                    "description": "Boolean to trigger the email from the organization's email address.",
                    "type": "boolean"
                },
                "to_mail_ids": {
                    "location": "json",
                    "type": "array",
                    "required": true
                },
                "cc_mail_ids": {
                    "location": "json",
                    "type": "array"
                }
            }
        },
        "emailInvoices": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/email",
            "summary": "Send invoices to your customers by email. Maximum of 10 invoices can be sent at once",
            "parameters": {
                "invoice_ids": {
                    "location": "query",
                    "description": "Comma separated invoice ids which are to be emailed.",
                    "required": true
                },
                "contacts": {
                    "location": "json",
                    "description": "Contacts for whom email or snail mail has to be sent.",
                    "type": "array",
                    "parameters": {
                        "contact_id": {
                            "location": "json",
                            "description": "ID of the contact. Can specify if email or snail mail has to be sent for each contact.",
                            "type": "string",
                            "required": true
                        },
                        "email": {
                            "location": "json",
                            "type": "bool"
                        },
                        "snail_mail": {
                            "location": "json",
                            "type": "bool"
                        }
                    }
                }
            }
        },
        "getInvoiceEmailContent": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/email",
            "summary": "Get invoice email content",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "email_template_id": {
                    "location": "query",
                    "type": "string",
                    "description": "Get the email content based on a specific email template. If this param is not inputted, then the content will be based on the email template associated with the customer. If no template is associated with the customer, then default template will be used."
                }
            }
        },
        "remindCustomer": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/paymentreminder",
            "summary": "Remind your customer about an unpaid invoice by email. Reminder will be sent, only for the invoices which are in open or overdue status",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "send_customer_statement": {
                    "location": "query",
                    "description": "Send customer statement pdf a with payment reminder.",
                    "type": "boolean"
                },
                "send_from_org_email_id": {
                    "location": "json",
                    "description": "Boolean to trigger the email from the organization's email address.",
                    "type": "boolean"
                },
                "to_mail_ids": {
                    "location": "json",
                    "type": "array",
                    "required": true
                },
                "cc_mail_ids": {
                    "location": "json",
                    "type": "array"
                }
            }
        },
        "remindCustomers": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/paymentreminder",
            "summary": "Remind your customer about an unpaid invoices by email. Reminder mail will be send, only for the invoices is in open or overdue status. Maximum 10 invoices can be reminded at once",
            "parameters": {
                "invoice_ids": {
                    "location": "query",
                    "description": "Invoice IDs",
                    "type": "string",
                    "required": true
                }
            }
        },
        "getReminderEmailContent": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/paymentreminder",
            "summary": "Get the mail content of the payment reminder",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "exportInvoices": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/pdf",
            "summary": "Maximum of 25 invoices can be exported in a single pdf",
            "parameters": {
                "invoice_ids": {
                    "location": "query",
                    "description": "Invoice IDs",
                    "type": "string",
                    "required": true
                }
            }
        },
        "printInvoices": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/print",
            "summary": "Export invoices as pdf and print them. Maximum of 25 invoices can be printed",
            "parameters": {
                "invoice_ids": {
                    "location": "query",
                    "description": "Invoice IDs",
                    "type": "string",
                    "required": true
                }
            }
        },
        "disablePaymentReminder": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/paymentreminder/disable",
            "summary": "Disable automated payment reminders for an invoice",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "enablePaymentReminder": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/paymentreminder/enable",
            "summary": "Enable automated payment reminders for an invoice",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "writeOffInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/writeoff",
            "summary": "Write off the invoice balance amount of an invoice",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "cancelWriteOffInvoice": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/writeoff/cancel",
            "summary": "Cancel the write off amount of an invoice.",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                }
            }
        },
        "updateBillingAdress": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/address/billing",
            "summary": "Updates the billing address for this invoice alone. You can set this address as default billing address for your customer by specifying 'is_update_customer' param as true",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "is_update_customer": {
                    "location": "json",
                    "description": "Boolean to update the address for all draft, unpaid invoices and future invoices.",
                    "type": "boolean"
                }
            }
        },
        "updateShippingAdress": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/address/shipping",
            "summary": "Updates the shipping address for this invoice. You can set this address as default shipping address for your customer by specifying 'is_update_customer' param as true",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "is_update_customer": {
                    "location": "json",
                    "description": "Boolean to update the address for all draft, unpaid invoices and future invoices.",
                    "type": "boolean"
                }
            }
        },
        "getInvoiceTemplates": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/templates",
            "summary": "Get all invoice pdf templates",
            "parameters": {
            }
        },
        "updateInvoiceTemplates": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/invoices/{invoice_id}/templates/{template_id}",
            "summary": "Update the pdf template associated with the invoice",
            "parameters": {
                "invoice_id": {
                    "location": "uri",
                    "description": "Invoice ID",
                    "required": true
                },
                "template_id": {
                    "location": "uri",
                    "description": "Template ID",
                    "required": true
                }
            }
        }
    }
}