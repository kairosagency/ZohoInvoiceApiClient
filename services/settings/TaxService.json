{
    "name": "Zoho invoice taxes settings api",
    "apiVersion": "v3",
    "basePath": "https://invoice.zoho.com",
    "description": "Foo is an API that allows you to Baz Bar",
    "includes": ["../BaseService.json"],
    "operations": {
        "getTaxes": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "GET",
            "uri": "/api/v3/settings/taxes",
            "summary": "Gets a list of taxes"
        },
        "getTax": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "GET",
            "uri": "/api/v3/settings/taxes/{tax_id}",
            "summary": "Get a tax",
            "parameters": {
                "tax_id": {
                    "location": "uri",
                    "description": "tax id",
                    "type": "string",
                    "required": true
                }
            }
        },
        "createTax": {
            "extends": "abstract.basezohoapi",
            "httpMethod": "POST",
            "uri": "/api/v3/settings/taxes",
            "summary": "Creates a new tax",
            "parameters": {
                "tax_id": {
                    "location": "uri",
                    "description": "tax id",
                    "type": "string",
                    "required": true
                },
                "tax_name": {
                    "location": "json",
                    "description": "Name of the tax.",
                    "type": "string",
                    "required": true
                },
                "tax_percentage": {
                    "location": "json",
                    "description": "Number of percentage taxable.",
                    "type": "number",
                    "required": true
                },
                "tax_type": {
                    "location": "json",
                    "description": "Type to determine whether it is a simple or compound tax. Allowed Values: tax and compound_tax",
                    "type": "string"
                }
            }
        },
        "updateTax": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxes/{tax_id}",
            "summary": "Update a single tax",
            "parameters": {
                "tax_id": {
                    "location": "uri",
                    "description": "tax id",
                    "type": "string",
                    "required": true
                },
                "tax_name": {
                    "location": "json",
                    "description": "Name of the tax.",
                    "type": "string",
                    "required": true
                },
                "tax_percentage": {
                    "location": "json",
                    "description": "Number of percentage taxable.",
                    "type": "number",
                    "required": true
                },
                "tax_type": {
                    "location": "json",
                    "description": "Type to determine whether it is a simple or compound tax. Allowed Values: tax and compound_tax",
                    "type": "string"
                }
            }
        },
        "deleteTax": {
            "httpMethod": "DELETE",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxes/{tax_id}",
            "summary": "Update a single tax",
            "parameters": {
                "tax_id": {
                    "location": "uri",
                    "description": "tax id",
                    "type": "string",
                    "required": true
                }
            }
        },
        "getTaxGroup": {
            "httpMethod": "GET",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxgroups/{tax_group_id}",
            "summary": "Deletes an user",
            "parameters": {
                "tax_group_id": {
                    "location": "uri",
                    "description": "Tax group ID",
                    "required": true
                }
            }
        },
        "createTaxGroup": {
            "httpMethod": "POST",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxgroups",
            "summary": "Update a single tax",
            "parameters": {
                "tax_group_name": {
                    "location": "uri",
                    "description": "tax group name",
                    "type": "string"
                },
                "taxes": {
                    "location": "json",
                    "description": "List of tax IDs that are to be associated to the tax group.",
                    "type": "string"
                }
            }
        },
        "updateTaxGroup": {
            "httpMethod": "PUT",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxgroups/{tax_group_id}",
            "summary": "Update a single tax",
            "parameters": {
                "tax_group_id": {
                    "location": "uri",
                    "description": "Tax group ID",
                    "required": true
                },
                "tax_group_name": {
                    "location": "uri",
                    "description": "tax group name",
                    "type": "string"
                },
                "taxes": {
                    "location": "json",
                    "description": "List of tax IDs that are to be associated to the tax group.",
                    "type": "string"
                }
            }
        },
        "deleteTaxGroup": {
            "httpMethod": "DELETE",
            "extends": "abstract.basezohoapi",
            "uri": "/api/v3/settings/taxgroups/{tax_group_id}",
            "summary": "Update a single tax",
            "parameters": {
                "tax_group_id": {
                    "location": "uri",
                    "description": "Tax group ID",
                    "required": true
                }
            }
        }
    }
}