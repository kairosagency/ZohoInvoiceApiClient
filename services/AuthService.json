{
    "name": "Zoho invoice auth api",
    "baseUrl": "https://accounts.zoho.com",
    "description": "Foo is an API that allows you to Baz Bar",
    "operations": {
        "GetAuthToken": {
            "httpMethod": "POST",
            "uri": "/apiauthtoken/nb/create",
            "summary": "Gets an auth token",
            "parameters": {
                "SCOPE": {
                    "location": "query",
                    "description": "User to retrieve by ID",
                    "required": true,
                    "default": "ZohoInvoice/invoiceapi"
                },
                "EMAIL_ID": {
                    "location": "query",
                    "description": "Account EMAIL or ID",
                    "required": true
                },
                "PASSWORD": {
                    "location": "query",
                    "description": "account password",
                    "required": true
                }
            }
        }
    }

}